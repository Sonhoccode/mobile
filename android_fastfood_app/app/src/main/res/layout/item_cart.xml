<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image_cart_item"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#EAEAEA"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/text_cart_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên món ăn"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/text_cart_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/text_cart_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="XX.000đ"
            android:textColor="#D32F2F"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_decrease_quantity"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_decrease"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:id="@+id/text_cart_item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingHorizontal="8dp"/>

        <ImageButton
            android:id="@+id/button_increase_quantity"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_increase"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/button_delete_item"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_delete"
        android:layout_marginStart="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="#D32F2F" />
</LinearLayout>